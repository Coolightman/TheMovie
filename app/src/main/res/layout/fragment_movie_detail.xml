<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.MovieDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cd_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/placeholder_image_poster" />

        <View
            android:id="@+id/view_info_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#99000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_popular_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/view_info_box"
            app:layout_constraintTop_toTopOf="@+id/view_info_box"
            tools:text="99" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_popular_place_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_popular_place_label_text"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_popular_place"
            app:layout_constraintStart_toStartOf="@+id/tv_popular_place"
            app:layout_constraintTop_toBottomOf="@+id/tv_popular_place"
            tools:ignore="SmallSp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_top_250_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/tv_popular_place"
            app:layout_constraintTop_toTopOf="@+id/view_info_box"
            tools:text="99" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_top_250_place_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_top_250_place_label_text"
            android:textColor="#BC8A0E"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_top_250_place"
            app:layout_constraintStart_toStartOf="@+id/tv_top_250_place"
            app:layout_constraintTop_toBottomOf="@+id/tv_top_250_place"
            tools:ignore="SmallSp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:layout_constraintEnd_toEndOf="@+id/view_info_box"
            app:layout_constraintTop_toTopOf="@+id/view_info_box"
            tools:text="8.6"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating"
            app:layout_constraintStart_toStartOf="@+id/tv_rating"
            app:layout_constraintEnd_toEndOf="@+id/tv_rating"
            tools:text="99999"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@+id/view_info_box"
            app:layout_constraintBottom_toBottomOf="@+id/view_info_box"
            app:layout_constraintEnd_toStartOf="@+id/tv_rating"
            app:srcCompat="@drawable/ic_baseline_star_36"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>